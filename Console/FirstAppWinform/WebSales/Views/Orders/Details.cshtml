@model WebSales.Models.EF.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="shadow container p-3 my-3">
        <div class="form-horizontal">
            <h2 class="text-center">Chi tiết</h2>
            <hr />
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <label class="font-weight-bold pl-2">Thời gian xuất hàng</label>
                <div class="col-md-12">
                    <input readonly type="date" class="form-control bg-white" value="@Model.OrderDate.ToString("yyyy-MM-dd")" />
                </div>
            </div>

            <div class="form-group">
                <label class="font-weight-bold pl-2">Khách hàng</label>
                <div class="col-md-12">
                    <input readonly class="form-control bg-white" value="@Model.Customer.Fullname" />
                </div>
            </div>

            <div class="form-group">
                <label class="font-weight-bold pl-2">Địa chỉ</label>
                <div class="col-md-12">
                    <input readonly class="form-control bg-white" value="@Model.Address" />
                </div>
            </div>

            <div class="form-group">
                <label class="font-weight-bold pl-2">Tổng tiền</label>
                <div class="col-md-12">
                    <input readonly class="form-control bg-white" value="@String.Format("{0:0,0}", Model.Amount)" />
                </div>
            </div>

            <div class="form-group">
                <label class="font-weight-bold pl-2">Ghi chú</label>
                <div class="col-md-12">
                    <textarea class="form-control bg-white" readonly rows="2">@Model.Description</textarea>
                </div>
            </div>

            <div class="form-group text-center mt-3">
                @Html.ActionLink("Sửa", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Quay Lại", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}