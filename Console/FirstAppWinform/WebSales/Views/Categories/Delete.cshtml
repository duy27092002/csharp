@model WebSales.Models.EF.Category

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center">Bạn có thực sự muốn xóa không?</h2>
            <hr />
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <label class="font-weight-bold pl-2">Tên loại</label>
                <div class="col-md-12">
                    <input type="text" class="form-control bg-white" readonly value="@Model.Name" />
                </div>
            </div>

            <div class="form-group">
                <label class="font-weight-bold pl-2">Tên tiếng Việt</label>
                <div class="col-md-12">
                    <input type="text" class="form-control bg-white" readonly value="@Model.NameVN" />
                </div>
            </div>

            <div class="form-group text-center mt-3">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                @Html.ActionLink("Quay Lại", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}