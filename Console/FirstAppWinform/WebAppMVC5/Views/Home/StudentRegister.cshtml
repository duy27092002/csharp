@model WebAppMVC5.Models.EF.Student
@{
    ViewBag.Title = "StudentRegister";


}

<h2>StudentRegister</h2>

@using (Html.BeginForm("StudentRegister", "Home", FormMethod.Post)) 
{ 
    @Html.ValidationSummary(true)
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label class="fw-bold">ID:</label>
                @Html.TextBoxFor(model => model.Id, htmlAttributes: new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.Id)
            </div>
            <div class="form-group">
                <label class="fw-bold">Họ và tên:</label>
                @Html.TextBoxFor(model => model.FullName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FullName)
            </div>
            <div class="form-group">
                <label class="fw-bold">Giới tính:</label>
                @Html.DropDownListFor(model => model.Gender, ViewBag.Gender as SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Gender)
            </div>
            <div class="form-group">
                <label class="fw-bold">Ngày sinh:</label>
                @*@Html.TextBoxFor(model => model.DateOfBirth, htmlAttributes: new { @class = "form-control" })*@
                <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
                @Html.ValidationMessageFor(model => model.DateOfBirth)
            </div>
            <div class="form-group">
                <label class="fw-bold">Email:</label>
                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                <label class="fw-bold">Xác nhận lại Email:</label>
                @Html.TextBoxFor(model => model.ConfirmEmail, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConfirmEmail)
            </div>
            <div class="form-group">
                <label class="fw-bold">Số điện thoại:</label>
                @Html.TextBoxFor(model => model.PhoneNumber, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
            <div class="form-group">
                <label class="fw-bold">Số thẻ căn cước:</label>
                @Html.TextBoxFor(model => model.IDCard, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDCard)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-success">Đăng ký</button>
            </div>
            <div class="form-group">
                <p>@ViewBag.Success</p>
            </div>
        </div>
    </div>
    @Html.AntiForgeryToken()
}