@model watchShop.Models.EF.tb_category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center">Chỉnh Sửa</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.categoryID)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Tên Danh Mục</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-sm btn-success" />
                <a class="btn btn-sm btn-secondary" href="/Admin/Category/Index">Quay Lại</a>
            </div>
        </div>
    </div>
    
}