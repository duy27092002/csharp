@model watchShop.Models.EF.tb_category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2>Chi Tiết Thông Tin Danh Mục</h2>
            <hr />
            @Html.HiddenFor(model => model.categoryID)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Tên Danh Mục</label>
                <div class="col-md-12">
                    <input type="text" class="form-control bg-white" id="name" name="name" readonly value="@Model.name" />
                </div>
            </div>

            <div class="form-group text-center">
                @Html.ActionLink("Sửa", "Edit", new { id = Model.categoryID }, new { @class = "btn btn-sm btn-warning" })
                @Html.ActionLink("Quay Lại", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary" })
            </div>
        </div>
    </div>
}