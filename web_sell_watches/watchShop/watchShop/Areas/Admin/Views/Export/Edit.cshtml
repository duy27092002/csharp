@model watchShop.Models.EF.tb_export_invoice

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center">Chỉnh Sửa</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.exportInvoiceID)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Thời Gian Xuất</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Nhân Viên Xuất</label>
                <div class="col-md-12">
                    @Html.DropDownList("staffID", ViewBag.staffList as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.staffID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Khách Hàng</label>
                <div class="col-md-12">
                    @Html.DropDownList("customerID", ViewBag.customerList as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.customerID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <h3 class="text-center">Danh Mục Sản Phẩm</h3>
                <div class="table-responsive">
                    <table id="tb-items" class="table table-bordered table-sm table-hover text-center">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên</th>
                                <th>Danh Mục</th>
                                <th>Nhà Sản Xuất</th>
                                <th>Số Lượng</th>
                                <th>Đơn Giá</th>
                                <th>Tổng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                            <tr>
                                <th id="total" colspan="7" style="text-align:right;">Thành Tiền: </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <button id="btn-add-items" class="btn btn-sm btn-success"><i class="fas fa-plus"></i>&nbsp;Thêm Sản Phẩm</button>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-sm btn-success" />
                <a class="btn btn-sm btn-secondary" href="/Admin/Export/Index">Quay Lại</a>
            </div>
        </div>
    </div>
}
<div class="modal fade" id="modal-data">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Danh Sách Sản Phẩm</h4>
            </div>

            <div class="modal-body overflow-auto">
                <div class="form-group mb-3">
                    <label class="fw-bold">Danh Mục</label>
                    @Html.DropDownList("select-category", ViewBag.Category as SelectList, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="table-responsive">
                    <table id="tb-add-items" class="table table-sm table-hover table-striped table-bordered text-center">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên</th>
                                <th>Nhà Sản Xuất</th>
                                <th>SL Tồn</th>
                                <th>SL Mua</th>
                                <th>Đơn Giá</th>
                                <th>Thành Tiền</th>
                                <th>Chọn</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-success" data-dismiss="modal" id="btn-modal-accept">Thêm</button>
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" id="btn-close">Hủy</button>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/admin/export/add.js"></script>
}