@model watchShop.Models.EF.tb_users

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2>Bạn có thực sự muốn xóa không?</h2>
            <hr />
            @Html.HiddenFor(model => model.userID)

            <p class="text-center">
                @{
                    if (Model.avatar != null)
                    {
                        var getUrlImg = Model.avatar.ToString().Replace("~", "../../..");
                        <img src="@getUrlImg" class="img-fluid rounded-circle" style="width:200px" />
                    }
                    else
                    {
                        <img src="../../../Content/images/avatars/add.jpg" class="img-fluid rounded-circle" style="width:200px" />
                    }
                }
            </p>
            <h6 class="text-center fw-bold">(@Model.userName)</h6>

            <div class="row mt-3">
                <div class="form-group mb-3 col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="form-label fw-bold">Tên</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control bg-white" id="name" name="name" readonly value="@Model.name" />
                    </div>
                </div>

                <div class="form-group mb-3 col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="form-label fw-bold">Giới Tính</label>
                    <div class="col-md-12">
                        @{
                            var gender = Model.gender == true ? "Nam" : "Nữ";
                        }
                        <input type="text" class="form-control bg-white" id="gender" name="gender" readonly value="@gender" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="form-label fw-bold">Ngày Sinh</label>
                    <div class="col-md-12">
                        @{
                            var birthday = Model.birthday.Value.ToString("MM/dd/yyyy");
                        }
                        <input type="text" class="form-control bg-white" id="birthday" name="birthday" readonly value="@birthday" />
                    </div>
                </div>

                <div class="form-group mb-3 col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="form-label fw-bold">Địa Chỉ</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control bg-white" id="address" name="address" readonly value="@Model.address" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="form-label fw-bold">EMail</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control bg-white" id="email" name="email" readonly value="@Model.email" />
                    </div>
                </div>

                <div class="form-group mb-3 col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="form-label fw-bold">SĐT</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control bg-white" id="phonenumber" name="phonenumber" readonly value="@Model.phonenumber" />
                    </div>
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Xóa" class="btn btn-sm btn-danger" />
                <input type="button" value="Quay lại" onclick="history.back(-1)" class="btn btn-sm btn-secondary" />
            </div>
        </div>
    </div>
}