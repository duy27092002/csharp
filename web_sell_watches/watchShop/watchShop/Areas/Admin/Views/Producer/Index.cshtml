@model IEnumerable<watchShop.Models.EF.tb_producer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-3">Danh Sách Nhà Sản Xuất</h2>

<p>
    <a class="btn btn-sm btn-success" href="/Admin/Producer/Create"><i class="fas fa-plus"></i>&nbsp;Thêm Mới</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped text-center">
        <tr>
            <th>Tên</th>
            <th>Địa Chỉ</th>
            <th>EMail</th>
            <th>SĐT</th>
            <th>Thao Tác</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phonenumber)
                </td>
                <td class="text-nowrap" style="width:1px">
                    <a class="btn btn-sm btn-warning" href="/Admin/Producer/Edit/@item.producerID"><i class="fas fa-pencil-alt"></i>&nbsp;Sửa</a>
                    <a class="btn btn-sm btn-primary" href="/Admin/Producer/Details/@item.producerID"><i class="fas fa-eye"></i>&nbsp;Chi Tiết</a>
                    <a class="btn btn-sm btn-danger" href="/Admin/Producer/Delete/@item.producerID"><i class="fas fa-trash-alt"></i>&nbsp;Xóa</a>
                </td>
            </tr>
        }

    </table>
</div>