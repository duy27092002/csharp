@model watchShop.Models.EF.tb_users

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">

    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Đăng Ký</h4></header>
            @using (Html.BeginForm("Register", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-row">
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                        <label>Họ và tên</label>
                        <input type="text" class="form-control" placeholder="" id="name" name="name">
                    </div> <!-- form-row end.// -->
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                        <label>Tên đăng nhập</label>
                        <input type="text" class="form-control" placeholder="" id="userName" name="userName">
                    </div> <!-- form-row end.// -->
                </div>
                <div class="form-row">
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                        <label>Email</label>
                        <input type="email" class="form-control" placeholder="" id="email" name="email">
                        <small class="form-text text-muted">Chúng tôi sẽ không bao giờ chia sẻ email của bạn với bất kỳ ai khác.</small>
                    </div>
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                        <label>SĐT</label>
                        <input type="tel" class="form-control" placeholder="" id="phonenumber" name="phonenumber">
                    </div>
                </div>
                <div class="form-group">
                    <label class="mr-3">Giới tính:</label>
                    <label class="custom-control custom-radio custom-control-inline">
                        <input class="custom-control-input" checked="" type="radio" name="gender" value="True">
                        <span class="custom-control-label"> Nam </span>
                    </label>
                    <label class="custom-control custom-radio custom-control-inline">
                        <input class="custom-control-input" type="radio" name="gender" value="False">
                        <span class="custom-control-label"> Nữ </span>
                    </label>
                    <label class="custom-control custom-radio custom-control-inline">
                        <input class="custom-control-input" type="radio" name="gender" value="Not Set">
                        <span class="custom-control-label"> Khác </span>
                    </label>
                </div> <!-- form-group end.// -->
                <div class="form-row">
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                        <label>Ngày sinh</label>
                        <input type="date" class="form-control" id="birthday" name="birthday">
                    </div> <!-- form-group end.// -->
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                        <label>Địa chỉ</label>
                        <textarea id="address" name="address" rows="1" class="form-control"></textarea>
                    </div> <!-- form-group end.// -->
                </div> <!-- form-row.// -->
                <div class="form-row">
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                        <label>Mật khẩu</label>
                        <input class="form-control" type="password" id="password" name="password">
                    </div> <!-- form-group end.// -->
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                        <label>Nhập lại mật khẩu</label>
                        <input class="form-control" type="password" id="confirmPass" name="confirmPass">
                    </div> <!-- form-group end.// -->
                </div>
                <div class="form-group mb-0">
                    <input type="hidden" id="isCustomer" name="isCustomer" value="True" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Đăng ký  </button>
                </div> <!-- form-group// -->
                <div class="form-group">
                    <label class="custom-control custom-checkbox"> <input type="checkbox" class="custom-control-input" checked=""> <div class="custom-control-label"> Tôi đồng ý vơi <a href="#">các điều khoản và điều kiện</a>  </div> </label>
                </div> <!-- form-group end.// -->
            }
        </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Bạn đã có tài khoản? <a href="/User/Login">Đăng nhập</a></p>
    <br><br>
    <!-- ============================ COMPONENT REGISTER  END.// ================================= -->


</section>
<!-- ========================= SECTION CONTENT END// ========================= -->