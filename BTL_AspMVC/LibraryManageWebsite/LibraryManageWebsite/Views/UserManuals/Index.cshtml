@model IEnumerable<LibraryManageWebsite.Models.EF.UserManual>

@{
    ViewBag.Title = "Hướng dẫn sử dụng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/scroll-content.css" rel="stylesheet" />

<div class="shadow container mt-3 py-3">
    <h2 class="text-center mb-3">Hướng dẫn sử dụng hệ thống quản lý</h2>

    @Html.Partial("IndexPartialView\\AlertMessage")

    @if (User.IsInRole("Developer"))
    {
        // nếu chưa có hướng dẫn thì sẽ hiển thị nút tạo mới
        // nếu có rồi thì sẽ ẩn nút tạo mới đi
        if (ViewBag.Exited == false)
        {
            <p>
                <a class="btn btn-sm btn-primary" href="@Url.Action("Create", "UserManuals")">+ Tạo mới</a>
            </p>
        }
    }

    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-body load-content">
                @Html.Raw(item.UMContent)
            </div>
        </div>

        if (User.IsInRole("Developer"))
        {
            <p class="mt-3">
                <a class="btn btn-sm btn-info" href="@Url.Action("Edit", "UserManuals", new { id = item.Id })">Sửa hướng dẫn</a>
            </p>
        }
    }
</div>