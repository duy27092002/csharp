@model LibraryManageWebsite.Models.EF.UserManual

@{
    ViewBag.Title = "Tạo mới hướng dẫn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center mb-3">Tạo mới hướng dẫn sử dụng hệ thống quản lý</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="font-weight-bold">Nội dung <span class="text-danger">*</span></label>
                <div class="col-md-12 pl-0">
                    <textarea class="form-control" rows="12" id="create_um_content" name="UMContent"></textarea>
                    @Html.ValidationMessageFor(model => model.UMContent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center mt-5">
                <input type="submit" value="Tạo" class="btn btn-sm btn-primary" />
                <a class="btn btn-sm btn-secondary" onclick="window.history.go(-1); return false;">Quay Lại</a>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script>CKEDITOR.replace("create_um_content");</script>
}