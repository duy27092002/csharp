@model LibraryManageWebsite.Models.EF.Owner

@{
    ViewBag.Title = "Thêm khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center mt-3">Thêm khách hàng</h2>
            @Html.Partial("IndexPartialView\\AlertMessage")
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="font-weight-bold">Tên khách hàng <span class="text-danger">*</span></label>
                <div class="col-md-12 pl-0">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="font-weight-bold">Email <span class="text-danger">*</span></label>
                    <div class="col-md-12 pl-0">
                        <input type="email" id="Email" name="Email" class="form-control" />
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="font-weight-bold">Số điện thoại <span class="text-danger">*</span></label>
                    <div class="col-md-12 pl-0">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="font-weight-bold">Ngày kích hoạt <small class="text-secondary">(tháng/ ngày/ năm)</small></label>
                    <div class="col-md-12 pl-0">
                        <input type="text" id="RegistrationTime" name="RegistrationTime" class="form-control bg-white" readonly value="@DateTime.Now.ToString("MM/dd/yyyy")" />
                    </div>
                </div>

                <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="font-weight-bold">
                        Ngày hết hạn kích hoạt
                        <span class="text-danger">*</span>
                        <small class="text-secondary">(tháng/ ngày/ năm)</small>
                    </label>
                    <div class="col-md-12 pl-0">
                        <input type="date" id="ExpireTime" name="ExpireTime" class="form-control" />
                        @Html.ValidationMessageFor(model => model.ExpireTime, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="font-weight-bold">Trạng thái <span class="text-danger">*</span></label>
                <div class="col-md-12 pl-0">
                    <select id="Status" name="Status" class="form-control">
                        <option value="1">Kích hoạt</option>
                        <option value="0">Ngừng kích hoạt</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center mt-5">
                <input type="submit" value="Tạo" class="btn btn-sm btn-primary" />
                <a class="btn btn-sm btn-secondary" onclick="window.history.go(-1); return false;">Quay Lại</a>
            </div>
        </div>
    </div>
}