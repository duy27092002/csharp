@model PagedList.PagedList<LibraryManageWebsite.Models.EF.Owner>

@{
    ViewBag.Title = "Danh sách người mua website";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="shadow container mt-3 py-3">
    <h2 class="text-center mb-3">Danh sách người mua website</h2>
    @Html.Partial("IndexPartialView\\CreateAndFindByKeyword")
    @Html.Partial("IndexPartialView\\AlertMessage")
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover table-striped text-center">
            <tr>
                <th>Tên cá nhân, tổ chức</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-nowrap" style="width:1px">
                        @if (item.Status == 1)
                        {
                            <a class="btn btn-sm btn-success" disabled>Đang hoạt động</a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-danger" disabled>Đã ngừng hoạt động</a>
                        }
                    </td>
                    <td class="text-nowrap" style="width:1px">
                        @Html.Partial("IndexPartialView\\TableFeature", item.Id)
                    </td>
                </tr>
            }

        </table>
    </div>
    @Html.Partial("IndexPartialView\\PagedList")
</div>