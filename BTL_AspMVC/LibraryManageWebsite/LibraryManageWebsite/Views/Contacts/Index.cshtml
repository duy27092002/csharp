@model PagedList.PagedList<LibraryManageWebsite.Models.EF.Contact>

@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="shadow container mt-3 py-3">
    <h2 class="text-center mb-3">Danh sách liên hệ</h2>
    @if (User.IsInRole("Admin"))
    {
        @Html.Partial("IndexPartialView\\CreateAndFindByKeyword")
    }

    @Html.Partial("IndexPartialview\\AlertMessage")
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover table-striped text-center">
            <tr>
                <th>Người nhận liên hệ</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Trạng thái</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Thao tác</th>
                }
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdminName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdminPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdminEmail)
                    </td>
                    <td class="text-nowrap" style="width:1px">
                        @if (item.Status == 1)
                        {
                            <a class="btn btn-sm btn-success" disabled>Liên hệ được</a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-danger" disabled>Đã hủy liên hệ</a>
                        }
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td class="text-nowrap" style="width:1px">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-warning" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
                        </td>
                    }
                </tr>
            }

        </table>
    </div>
    @Html.Partial("IndexPartialView\\PagedList")
</div>