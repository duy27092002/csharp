@model LibraryManageWebsite.Models.EF.Contact

@{
    ViewBag.Title = "Xóa liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2>Bạn có thực sự muốn xóa không?</h2>
            <hr />
            @Html.HiddenFor(model => model.Id)

            <input type="hidden" id="OwnerId" name="OwnerId" value="@Model.OwnerId" readonly />

            <div class="form-group">
                <label class="font-weight-bold">Tên người nhận liên hệ</label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="AdminName" name="AdminName" class="form-control bg-light" value="@Model.AdminName" readonly />
                </div>
            </div>

            <div class="row">
                <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="font-weight-bold">Email</label>
                    <div class="col-md-12 pl-0">
                        <input type="text" id="AdminEmail" name="AdminEmail" class="form-control bg-light" value="@Model.AdminEmail" readonly />
                    </div>
                </div>
                <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                    <label class="font-weight-bold">Số điện thoại</label>
                    <div class="col-md-12 pl-0">
                        <input type="text" id="AdminPhone" name="AdminPhone" class="form-control bg-light" value="@Model.AdminPhone" readonly />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label font-weight-bold">Trạng thái</label>
                <div class="col-md-12 pl-0">
                    @{ 
                        var getStatus = Model.Status == 1 ? "Liên hệ được" : "Đã hủy liên hệ";
                    }
                    <input type="text" id="Status" name="Status" class="form-control bg-light" value="@getStatus" readonly />
                </div>
            </div>

            <div class="form-group text-center mt-5">
                <input type="submit" value="Xóa" class="btn btn-sm btn-danger" />
                <a class="btn btn-sm btn-secondary" onclick="window.history.go(-1); return false;">Quay Lại</a>
            </div>
        </div>
    </div>
}