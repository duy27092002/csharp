@model PagedList.PagedList<LibraryManageWebsite.Models.EF.PromissoryNote>

@using PagedList.Mvc

@{
    ViewBag.Title = "Danh sách phiếu trễ hạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="shadow container mt-3 py-3">
    <h2 class="text-center mb-3">Danh sách phiếu trễ hạn</h2>
    <div class="row my-3">
        <div class="col-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-12 col-sm-12 col-md-4 col-lg-4 mb-3">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    <input type="text" class="form-control bg-light small" id="keyword" name="keyword" placeholder="Nhập từ khóa cần tìm..."
                           aria-label="Search" aria-describedby="basic-addon2" value="@ViewBag.Keyword">
                    <input type="hidden" id="page" name="page" value="1" />
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
    @Html.Partial("IndexPartialView\\AlertMessage")
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover table-striped text-center pn-table">
            <tr>
                <th>Nhân viên lập phiếu</th>
                <th>Tên đọc giả</th>
                <th>Số điện thoại</th>
                <th>Tên sách</th>
                <th>Ngày trả</th>
                <th>Chi phí mượn</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.User.Name)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reader.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reader.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Book.Name)
                        </td>
                        <td>
                            @{
                                var getExpiryDate = item.ExpiryDate.ToString("MM/dd/yyyy");
                            }
                            @getExpiryDate
                        </td>
                        <td style="text-align:right;">
                            @Html.DisplayFor(modelItem => item.Cost)
                        </td>
                        <td class="text-nowrap" style="width:1px">
                            @if (item.Status == 2)
                            {
                                <a class="btn btn-sm btn-danger" disabled>Trễ hạn</a>
                            }
                            else if (item.Status == 0)
                            {
                                <a class="btn btn-sm btn-primary" disabled>Đang mượn</a>
                            }
                        </td>
                        <td class="text-nowrap" style="width:1px">
                            <input type="hidden" value="@item.Id" class="pnId" />
                            @Html.Partial("IndexPartialView\\TableFeature", item.Id)
                            @Html.ActionLink("Trả sách", "ReturningBook", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-success" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

    <div class="text-center">
        @Html.PagedListPager(Model, page => Url.Action("LatedPNList",
        new { page = page, pageSize = ViewBag.PageSize, keyword = ViewBag.Keyword }))
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/CustomJs/check-expire-time-for-pnote.js"></script>
}