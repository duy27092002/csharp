@model LibraryManageWebsite.Models.EF.PromissoryNote

@{
    ViewBag.Title = "Tạo phiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="shadow container my-3 py-3">
    <div class="form-horizontal">
        <h2 class="text-center mb-3">Tạo phiếu mượn-trả mới</h2>
        @Html.Partial("IndexPartialView\\AlertMessage")
        <hr />

        <input type="hidden" id="UserId" name="UserId" value="@Session["userId"]" />
        <input type="hidden" id="OwnerId" name="OwnerId" value="@Session["ownerId"]" />

        <div class="row">
            <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                <label class="font-weight-bold">Nhân viên lập phiếu</label>
                <div class="col-md-12 pl-0">
                    <input type="text" class="form-control bg-white" value="@ViewBag.NameOfUser" readonly />
                </div>
            </div>

            <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                <label class="font-weight-bold">Số điện thoại đọc giả <span class="text-danger">*</span></label>
                <div class="col-md-12 pl-0">
                    <input class="form-control" list="readerPhone" name="ReaderPhone" id="ReaderPhone">
                    <datalist id="readerPhone" class="scrollable" style="overflow-y: auto!important">
                        @foreach (var item in ViewBag.GetReaderList)
                        {
                            <option value="@item.Phone"></option>
                        }
                    </datalist>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                <label class="font-weight-bold">Tên sách <span class="text-danger">*</span></label>
                <div class="col-md-12 pl-0">
                    <input class="form-control" list="bookName" name="BookName" id="BookName">
                    <datalist id="bookName" class="scrollable" style="overflow-y: auto!important">
                        @foreach (var item in ViewBag.GetBookNameList)
                        {
                            <option value="@item.Name"></option>
                        }
                    </datalist>
                </div>
            </div>

            <div class="form-group col-12 col-sm-12 col-md-6 col-lg-6">
                <label class="font-weight-bold">Tác giả <span class="text-danger">*</span></label>
                <div class="col-md-12 pl-0">
                    <input class="form-control" list="bookAuthor" name="BookAuthor" id="BookAuthor">
                    <datalist id="bookAuthor" class="scrollable" style="overflow-y: auto!important"></datalist>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12 col-sm-12 col-md-4 col-lg-4">
                <label class="font-weight-bold">Ngày mượn <small class="text-secondary">(tháng/ ngày/ năm)</small></label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="BorrowedDate" name="BorrowedDate" class="form-control bg-white" readonly value="@DateTime.Now.ToString("MM/dd/yyyy")" />
                </div>
            </div>

            <div class="form-group col-12 col-sm-12 col-md-4 col-lg-4">
                <label class="font-weight-bold">Ngày trả <span class="text-danger">*</span> <small class="text-secondary">(tháng/ ngày/ năm)</small></label>
                <div class="col-md-12 pl-0">
                    <input type="date" id="ExpiryDate" name="ExpiryDate" class="form-control" />
                </div>
            </div>

            <div class="form-group col-12 col-sm-12 col-md-4 col-lg-4">
                <label class="font-weight-bold">Phí mượn</label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="Cost" name="Cost" class="form-control bg-white" readonly />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="font-weight-bold">Trạng thái</label>
            <div class="col-md-12 pl-0">
                <input type="text" class="form-control bg-white" id="Status" name="Status" readonly value="Đang mượn" />
            </div>
        </div>

        <div class="form-group text-center mt-5">
            <input type="button" class="btn btn-sm btn-primary" value="Tạo" id="create-pn-btn">
            <a class="btn btn-sm btn-secondary" onclick="window.history.go(-1); return false;">Quay Lại</a>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/CustomJs/create-promissory-note.js"></script>
}