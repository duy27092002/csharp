@model LibraryManageWebsite.Models.EF.PromissoryNote

@{
    ViewBag.Title = "Trả sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="shadow container mt-3 py-3">
    <div class="form-horizontal">
        <h2 class="text-center mb-3">Thông tin phiếu</h2>
        @Html.Partial("IndexPartialView\\AlertMessage")
        <hr />
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col-12 col-sm-12 col-md-4 col-lg-4 form-group">
                <label class="font-weight-bold">Nhân viên lập phiếu</label>
                <div class="col-md-12 pl-0">
                    <input type="text" class="form-control bg-light" value="@Model.User.Name" readonly />
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-4 col-lg-4 form-group">
                <label class="font-weight-bold">Tên đọc giả</label>
                <div class="col-md-12 pl-0">
                    <input type="text" class="form-control bg-light" value="@Model.Reader.Name" readonly />
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-4 col-lg-4 form-group">
                <label class="font-weight-bold">Số điện thoại đọc giả</label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="ReaderPhone" class="form-control bg-light" value="@Model.Reader.Phone" readonly />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 form-group">
                <label class="font-weight-bold">Tác sách</label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="BookName" class="form-control bg-light" value="@Model.Book.Name" readonly />
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 form-group">
                <label class="font-weight-bold">Tác giả</label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="BookAuthor" class="form-control bg-light" value="@Model.Book.Author" readonly />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 form-group">
                <label class="font-weight-bold">Ngày mượn</label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="BorrowedDate" class="form-control bg-light" value="@Model.BorrowedDate.ToString("MM/dd/yyyy")" readonly />
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 form-group">
                <label class="font-weight-bold">Ngày trả</label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="ExpiryDate" class="form-control bg-light" value="@DateTime.Now.ToString("MM/dd/yyyy")" readonly />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6  form-group">
                <label class="font-weight-bold">Chi phí mượn</label>
                <div class="col-md-12 pl-0">
                    <input type="text" id="Cost" class="form-control bg-light" value="@Model.Cost" readonly />
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-6  form-group">
                <label class="form-label font-weight-bold">Trạng thái</label>
                <div class="col-md-12 pl-0">
                    @{
                        var getStatus = Model.Status == 0 ? "Đang mượn" :
                            Model.Status == 1 ? "Đã trả" : "Trễ hạn";
                    }
                    <input type="text" id="Status" class="form-control bg-light" value="@getStatus" readonly />
                </div>
            </div>
        </div>

        <div class="form-group text-center mt-5">
            <input type="button" value="Trả sách" class="btn btn-sm btn-success" id="returning-book-btn" />
            <a class="btn btn-sm btn-secondary" onclick="window.history.go(-1); return false;">Quay Lại</a>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/CustomJs/returning-book-pnote.js"></script>
} 