
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Chào mừng bạn!</h1>
                                    @Html.Partial("IndexPartialView\\AlertMessage")
                                </div>
                                <form class="user">

                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user rounded-pill"
                                               id="Username" name="Username" placeholder="Tên đăng nhập">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user rounded-pill"
                                               id="Email" name="Email" aria-describedby="emailHelp"
                                               placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user rounded-pill"
                                               id="Password" name="Password" placeholder="Mật khẩu">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user rounded-pill"
                                               id="OwnerId" name="OwnerId" placeholder="Mã xác minh">
                                        <small class="text-secondary">Mã này do cá nhân hoặc tổ chức quản lý thư viện cung cấp</small>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">
                                                Ghi nhớ tôi
                                            </label>
                                        </div>
                                    </div>
                                    <input type="submit" class="btn btn-primary btn-user btn-block rounded-pill" value="Đăng nhập">
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("ForgotPassword", "Accounts")">Quên mật khẩu?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("SignIn", "Accounts")">Bạn chưa có tài khoản? Đăng ký ngay nào!</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
}