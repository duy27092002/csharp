@model T3H_K34DL1_WebMVC5.Models.EF.HoaDonNhap

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2>Chi Tiết Thông Tin Hóa Đơn Nhập</h2>
            <hr />
            @Html.HiddenFor(model => model.MaHDNhap)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Thời Gian Nhập</label>
                <div class="col-md-12">
                    <input type="text" class="form-control" id="NgayNhap" name="NgayNhap" readonly value="@Model.NgayNhap.Value.ToString("MM/dd/yyyy")" />
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Nhà Cung Cấp</label>
                <div class="col-md-12">
                    <input type="text" class="form-control" id="TenNCC" name="TenNCC" readonly value="@Model.NhaCC.TenNCC" />
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Nhân Viên Nhập Hàng</label>
                <div class="col-md-12">
                    <input type="text" class="form-control" id="TenNV" name="TenNV" readonly value="@Model.NhanVien.TenNV" />
                </div>
            </div>

            <div class="form-group">
                <label class="form-label fw-bold">Sản Phẩm Nhập Vào</label>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead class="text-center">
                            <tr>
                                <th>STT</th>
                                <th>Mã Giày</th>
                                <th>Tên Giày</th>
                                <th>Số Lượng</th>
                                <th>Giá (VNĐ/1SP)</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @{
                                var ctHoaDonNhaps = ViewBag.CT_HoaDonNhap as List<T3H_K34DL1_WebMVC5.Models.EF.CT_HDNhap>;

                                if (ctHoaDonNhaps.Count > 0)
                                {
                                    int i = 0;
                                    foreach (var item in ctHoaDonNhaps)
                                    {
                                        <tr>
                                            <td>
                                                @{ if (item != null) { i++; }}
                                                @i
                                            </td>
                                            <td>@item.Giay.MaGiay</td>
                                            <td>@item.Giay.TenGiay</td>
                                            <td>@String.Format("{0:0,0}", item.Giay.SoLuong)</td>
                                            <td>@String.Format("{0:0,0}", item.Giay.Gia)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5"><label class="text-danger">Không có mặt hàng nào trong hóa đơn!</label></td>
                                    </tr>
                                }
                            }
                            <tr>
                                <th colspan="5" style="text-align:right;">Tổng Tiền (VNĐ): @String.Format("{0:0,0}", Model.TongTien)</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="form-group text-center">
                @Html.ActionLink("Sửa", "Edit", new { id = Model.MaHDNhap }, new { @class = "btn btn-sm btn-warning" }) |
                @Html.ActionLink("Quay Lại", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary" })
            </div>
        </div>
    </div>
}