@model T3H_K34DL1_WebMVC5.Models.EF.HoaDonNhap

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center">Chỉnh Sửa Hóa Đơn Nhập</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaHDNhap)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Thời Gian Nhập</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Nhân Viên Nhập Hàng</label>
                <div class="col-md-12">
                    @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Nhà Cung Cấp</label>
                <div class="col-md-12">
                    @Html.DropDownList("MaNCC", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="form-label fw-bold">Sản Phẩm Nhập Vào</label>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped text-center">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã Giày</th>
                                <th>Tên Giày</th>
                                <th>Số Lượng</th>
                                <th>Giá (VNĐ/1SP)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var ctHoaDonNhaps = ViewBag.CT_HoaDonNhap as List<T3H_K34DL1_WebMVC5.Models.EF.CT_HDNhap>;

                                if (ctHoaDonNhaps.Count > 0)
                                {
                                    int i = 0;
                                    foreach (var item in ctHoaDonNhaps)
                                    {
                                        <tr>
                                            <td>
                                                @{ if (item != null) { i++; }}
                                                @i
                                            </td>
                                            <td>@item.Giay.MaGiay</td>
                                            <td>@item.Giay.TenGiay</td>
                                            <td>@item.Giay.SoLuong</td>
                                            <td>@item.Giay.Gia</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5"><label class="text-danger">Không có mặt hàng nào trong hóa đơn!</label></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Tổng Tiền (VNĐ)</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control", @min = 0 } })
                    @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <a class="btn btn-sm btn-secondary p-2" href="/HoaDonNhap/Index">Quay Lại</a>
            </div>
        </div>
    </div>
}
