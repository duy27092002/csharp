@model T3H_K34DL1_WebMVC5.Models.EF.Giay

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2>Chỉnh Sửa Thông Tin Giày</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaGiay)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Tên Giày</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenGiay, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenGiay, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Nhà Sản Xuất</label>
                <div class="col-md-12">
                    @Html.DropDownList("MaNSX", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNSX, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Loại Giày</label>
                <div class="col-md-12">
                    @Html.DropDownList("MaLG", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaLG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Số Lượng (đôi)</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", @min = 0 } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Kích Cỡ Giày</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.KichCo, new { htmlAttributes = new { @class = "form-control", @min = 0 } })
                    @Html.ValidationMessageFor(model => model.KichCo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Màu Sắc</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.MauSac, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MauSac, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Giá (VNĐ)</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", @min = 0 } })
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Hình Ảnh</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <a class="btn btn-sm btn-secondary p-2" href="/Giay/Index">Quay Lại</a>
            </div>
        </div>
    </div>
}
