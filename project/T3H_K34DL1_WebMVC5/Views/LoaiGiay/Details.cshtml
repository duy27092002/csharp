@model T3H_K34DL1_WebMVC5.Models.EF.LoaiGiay

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2>Chi Tiết Thông Tin Loại Giày</h2>
            <hr />
            @Html.HiddenFor(model => model.MaLG)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Tên</label>
                <div class="col-md-12">
                    <input type="text" class="form-control" id="TenLG" name="TenLG" readonly value="@Model.TenLG" />
                </div>
            </div>

            <div class="form-group text-center">
                @Html.ActionLink("Sửa", "Edit", new { id = Model.MaLG }, new { @class = "btn btn-sm btn-warning" }) |
                @Html.ActionLink("Quay Lại", "Index", null, htmlAttributes: new { @class = "btn btn-sm btn-secondary" })
            </div>
        </div>
    </div>
}