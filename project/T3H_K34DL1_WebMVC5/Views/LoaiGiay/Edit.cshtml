@model T3H_K34DL1_WebMVC5.Models.EF.LoaiGiay

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center">Sửa Thông Tin Loại Giày</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaLG)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Tên</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenLG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenLG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-success" />
                <a class="btn btn-sm btn-secondary p-2" href="/LoaiGiay/Index">Quay Lại</a>
            </div>
        </div>
    </div>
}
