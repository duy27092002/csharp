@model T3H_K34DL1_WebMVC5.Models.EF.HoaDonXuat

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="shadow container mt-3 py-3">
        <div class="form-horizontal">
            <h2 class="text-center">Chỉnh Sửa Hóa Đơn Xuất</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaHDXuat)

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Thời Gian Xuất Hàng</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NgayXuat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayXuat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Khách Hàng</label>
                <div class="col-md-12">
                    @Html.DropDownList("MaKH", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="form-label fw-bold">Sản Phẩm Xuất Ra</label>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped text-center">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã Giày</th>
                                <th>Tên Giày</th>
                                <th>Số Lượng</th>
                                <th>Giá (VNĐ/1SP)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var ctHoaDonXuats = ViewBag.CT_HoaDonXuat as List<T3H_K34DL1_WebMVC5.Models.EF.CT_HDXuat>;

                                if (ctHoaDonXuats.Count > 0)
                                {
                                    int i = 0;
                                    foreach (var item in ctHoaDonXuats)
                                    {
                                        <tr>
                                            <td>
                                                @{ if (item != null) { i++; }}
                                                @i
                                            </td>
                                            <td>@item.Giay.MaGiay</td>
                                            <td>@item.Giay.TenGiay</td>
                                            <td>@String.Format("{0:0,0}", (Model.TongTien / item.Giay.Gia))</td>
                                            <td>@String.Format("{0:0,0}", item.Giay.Gia)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5"><label class="text-danger">Không có mặt hàng nào trong hóa đơn!</label></td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th id="total" colspan="7" style="text-align:right;">Thành Tiền: @String.Format("{0:0,0}", Model.TongTien)</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <button id="btn-add-items" class="btn btn-sm btn-success mb-3"><i class="fas fa-plus"></i>&nbsp;Thêm Sản Phẩm</button>
            </div>

            @*<div class="form-group mb-3">
                    <label class="form-label fw-bold">Tổng Tiền (VNĐ)</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control", @min = 0 } })
                        @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-sm btn-success" />
                <a class="btn btn-sm btn-secondary" href="/HoaDonXuat/Index">Quay Lại</a>
            </div>
        </div>
    </div>
}
@section scripts{
    <script src="~/Scripts/HDXuat/add.js"></script>
}